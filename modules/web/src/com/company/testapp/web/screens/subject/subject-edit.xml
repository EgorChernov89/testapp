<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://subjectEdit.caption"
        focusComponent="form"
        messagesPack="com.company.testapp.web.screens.subject">
    <data>
        <instance id="subjectDc"
                  class="com.company.testapp.entity.Subject">
            <view extends="_local"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="subjectDc">
            <column width="350px">
                <textField id="nameField" property="name" caption="Название примера"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose" caption="Закрыть"/>
        </hbox>
    </layout>
</window>
