<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://scheduleEdit.caption"
        focusComponent="form"
        messagesPack="com.company.testapp.web.screens.schedule">
    <data>
        <instance id="scheduleDc"
                  class="com.company.testapp.entity.Schedule">
            <view extends="_local">
                <property name="student" view="_minimal"/>
                <property name="teacher" view="_minimal"/>
                <property name="subject" view="_minimal"/>
            </view>
            <loader/>
            <collection id="studentDc" property="student"/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="scheduleDc">
            <column width="350px">
                <pickerField id="teacherField" property="teacher" caption="Учитель">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <pickerField id="subjectField" property="subject" caption="Предмет">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <textField id="durationField" property="duration"/>
            </column>
        </form>
        <groupBox id="studentBox" caption="msg://com.company.testapp.entity/Schedule.student">
            <table id="studentTable" dataContainer="studentDc" width="100%" height="200px">
                <actions>
                    <action id="exclude" type="exclude"/>
                </actions>
                <columns>
                    <column id="fullNameStudent" caption="Ф.И.О ученика"/>
                </columns>
                <buttonsPanel>
                    <button id = "addStudent" caption="Добавить ученика"/>
                    <button action="studentTable.exclude"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose" caption="Закрыть"/>
        </hbox>
    </layout>
</window>
