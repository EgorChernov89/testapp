<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://teacherEdit.caption"
        focusComponent="form"
        messagesPack="com.company.testapp.web.screens.teacher">
    <data>
        <instance id="teacherDc"
                  class="com.company.testapp.entity.Teacher">
            <view extends="_local"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="teacherDc">
            <column width="350px">
                <textField id="fullNameTeacherField" property="fullNameTeacher" caption="Ф.И.О Учителя"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose" caption="Закрыть"/>
        </hbox>
    </layout>
</window>
