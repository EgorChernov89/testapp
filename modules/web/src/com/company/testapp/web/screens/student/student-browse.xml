<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://studentBrowse.caption"
        focusComponent="studentsTable"
        messagesPack="com.company.testapp.web.screens.student">
    <data readOnly="true">
        <collection id="studentsDc"
                    class="com.company.testapp.entity.Student">
            <view extends="_local"/>
            <loader id="studentsDl">
                <query>
                    <!--                    <![CDATA[select e from testapp_Student e]]>-->
                    <![CDATA[select s from testapp_Student s
                    where s.id not in :excludeList]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="studentsTable"
            spacing="true">
        <filter id="filter"
                applyTo="studentsTable"
                dataLoader="studentsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="studentsTable"
                    width="100%"
                    dataContainer="studentsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="fullNameStudent" caption="Ф.И.О"/>
                <column id="groupName" caption="Название группы"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="studentsTable.create" caption="Создать"/>
                <button id="editBtn" action="studentsTable.edit" caption="Изменить"/>
                <button id="removeBtn" action="studentsTable.remove" caption="Удалить"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
