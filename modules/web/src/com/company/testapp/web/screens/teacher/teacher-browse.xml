<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://teacherBrowse.caption"
        focusComponent="teachersTable"
        messagesPack="com.company.testapp.web.screens.teacher">
    <data readOnly="true">
        <collection id="teachersDc"
                    class="com.company.testapp.entity.Teacher">
            <view extends="_local"/>
            <loader id="teachersDl">
                <query>
                    <![CDATA[select e from testapp_Teacher e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="teachersTable"
            spacing="true">
        <filter id="filter"
                applyTo="teachersTable"
                dataLoader="teachersDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="teachersTable"
                    width="100%"
                    dataContainer="teachersDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
                <action id="report" type="runReport"/>
                <action id="reportStudent" type="runReport"/>
            </actions>
            <columns>
                <column id="fullNameTeacher" caption="Ф.И.О Учителя"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="teachersTable.create" caption="Создать"/>
                <button id="editBtn" action="teachersTable.edit" caption="Изменить"/>
                <button id="removeBtn" action="teachersTable.remove" caption="Удалить"/>
                <button id="runTeacher" caption="Отчёт по преподавателю"/>
                <button id="runStudent" caption="Отчёт по количеству учеников"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
