<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://studentEdit.caption"
        focusComponent="form"
        messagesPack="com.company.testapp.web.screens.student">
    <data>
        <instance id="studentDc"
                  class="com.company.testapp.entity.Student">
            <view extends="_local"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="studentDc">
            <column width="350px">
                <textField id="fullNameStudentField" property="fullNameStudent" caption="Ф.И.О"/>
                <textField id="groupNameField" property="groupName" caption="Название группы"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose" caption="Закрыть"/>
        </hbox>
    </layout>
</window>
